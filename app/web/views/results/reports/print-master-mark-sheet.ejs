<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Master Mark Sheet</title>
  <style>
    @page { size: A4 landscape; margin: 8mm; }
    * { box-sizing: border-box; }
    body{
      font-family: "Times New Roman", Times, serif;
      color:#111;
      margin:0;
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
      position: relative;
    }
    body::before{
      content:"";
      position: fixed;
      inset: 0;
      background: url("/public/img/logo.png") no-repeat center center;
      background-size: 70%;
      opacity: 0.07;
      pointer-events: none;
      z-index: 0;
    }
    .page{
      position: relative;
      z-index: 1;
      page-break-after: always;
      min-height: 190mm;
      padding-bottom: 12mm;
    }
    .page.last{ page-break-after: auto; }

    .header-top{
      display:grid;
      grid-template-columns: 110px 1fr 110px;
      align-items:center;
      gap: 8px;
      margin-bottom: 4px;
    }
    .logo img{
      width: 90px;
      height: 90px;
      object-fit: contain;
      display:block;
      margin: 0 auto;
    }
    .title{
      text-align:center;
      line-height: 1.2;
      font-weight: 700;
      font-size: 14px;
      text-transform: uppercase;
    }
    .title .line{ display:block; }
    .title .small{ font-size: 12px; font-weight: 700; }
    .top-rule{ border-top: 2px solid #111; margin: 4px 0 6px; }

    .class-block{
      width: 340px;
      font-size: 12px;
      margin-bottom: 6px;
    }
    .class-block .cap{ font-weight: 700; text-transform: uppercase; margin-bottom: 2px; }
    .class-block .row{ display:flex; justify-content: space-between; }

    table.grid{
      width:100%;
      border-collapse: collapse;
      table-layout: fixed;
      font-size: 11px;
    }
    table.grid th, table.grid td{
      border: 1px solid #111;
      padding: 2px 3px;
      vertical-align: middle;
      word-wrap: break-word;
    }
    table.grid thead th{
      font-weight: 700;
      text-transform: uppercase;
      text-align:center;
    }
    .left{ text-align:left; }
    .center{ text-align:center; }

    .footer{
      position: absolute;
      left: 0;
      right: 0;
      bottom: 2mm;
      display:flex;
      justify-content: center;
      gap: 90px;
      font-size: 14px;
      font-weight: 700;
    }

    .bottom-wrap{
      margin-top: 10px;
      display:grid;
      grid-template-columns: 360px 360px 360px;
      gap: 10px;
      align-items:start;
    }
    .box-title{
      background:#000;
      color:#fff;
      font-weight: 700;
      text-align:center;
      padding: 3px 0;
      font-size: 12px;
      text-transform: uppercase;
    }
    table.box{
      width:100%;
      border-collapse: collapse;
      table-layout: fixed;
      font-size: 12px;
    }
    table.box th, table.box td{
      border: 1px solid #111;
      padding: 2px 4px;
    }

    .sig-row{
      margin-top: 26px;
      display:flex;
      justify-content: space-between;
      gap: 20px;
      font-size: 12px;
      font-weight: 700;
    }
    .sig{
      width: 22%;
      text-align:center;
    }
    .sig .line{
      border-top: 1px solid #111;
      margin: 22px 0 6px;
    }
  </style>
</head>
<body>
<%
  const m = meta || {};
  const rows = rows || [];
  const semTitle = (m.semesterLabel || m.semester || "").toUpperCase();
  const sessionName = (m.sessionName || m.sessionId || "").toUpperCase();
  const levelLabel = (m.levelLabel || m.level || "").toUpperCase();

  // paginate to keep signatures on last page
  const FULL_PAGE_ROWS = 40;
  const LAST_PAGE_ROWS = 18;

  let pages = [];
  if (rows.length <= LAST_PAGE_ROWS) pages = [rows];
  else {
    const last = rows.slice(rows.length - LAST_PAGE_ROWS);
    const rest = rows.slice(0, rows.length - LAST_PAGE_ROWS);
    for (let i = 0; i < rest.length; i += FULL_PAGE_ROWS) pages.push(rest.slice(i, i + FULL_PAGE_ROWS));
    pages.push(last);
  }
  const totalPages = pages.length;

  const summary = m.summary || { examined: rows.length, pass: 0, fail: 0, gradeCounts: {} };
%>

<% pages.forEach((pageRows, pi) => {
     const pageNo = pi + 1;
     const isFirst = (pi === 0);
     const isLast = (pi === pages.length - 1);
%>

<div class="page <%= isLast ? 'last' : '' %>">

  <% if (isFirst) { %>
    <div class="header-top">
      <div class="logo"><img src="/public/img/logo.png" alt="Logo"/></div>

      <div class="title">
        <span class="line"><%= (m.institutionName || "IJERO COLLEGE").toUpperCase() %></span>
        <% if (m.schoolName) { %><span class="line small"><%= String(m.schoolName).toUpperCase() %></span><% } %>
        <% if (m.departmentName) { %><span class="line small"><%= ("DEPARTMENT OF " + String(m.departmentName)).toUpperCase() %></span><% } %>
        <span class="line">MASTER MARK SHEET</span>
        <span class="line small"><%= semTitle %>, <%= sessionName %> &nbsp; | &nbsp; <%= levelLabel %></span>
        <span class="line small">
          COURSE: <%= (m.courseCode || "").toUpperCase() %> - <%= (m.courseTitle || "").toUpperCase() %>
          (<%= m.courseUnits || "" %> UNIT(S))
        </span>
      </div>

      <div class="logo"><img src="/public/img/logo.png" alt="Logo"/></div>
    </div>

    <div class="top-rule"></div>

    <div class="class-block">
      <div class="cap">CLASSIFICATION OF GRADE</div>
      <div class="row"><span>3.50 - 4.00</span><span>Distinction</span></div>
      <div class="row"><span>3.00 - 3.49</span><span>Upper Credit</span></div>
      <div class="row"><span>2.50 - 2.99</span><span>Lower Credit</span></div>
      <div class="row"><span>1.50 - 2.49</span><span>Pass</span></div>
      <div class="row"><span>0.00 - 1.49</span><span>Fail</span></div>
    </div>
  <% } %>

  <table class="grid">
    <thead>
      <tr>
        <th style="width:40px">#</th>
        <th style="width:130px">Matric</th>
        <th style="width:260px">Full Name</th>
        <th style="width:90px">Reg</th>
        <th style="width:55px">Units</th>
        <th style="width:60px">CA1</th>
        <th style="width:60px">CA2</th>
        <th style="width:60px">CA3</th>
        <th style="width:60px">Exam</th>
        <th style="width:70px">Total</th>
        <th style="width:60px">Grade</th>
        <th style="width:55px">GP</th>
      </tr>
    </thead>
    <tbody>
      <% if (!pageRows.length) { %>
        <tr><td class="center" colspan="12">No data for selected filters.</td></tr>
      <% } %>

      <% pageRows.forEach((r, i) => { %>
        <tr>
          <td class="center"><%= (pi === 0 ? i + 1 : (pi * 1000) + i + 1) %></td>
          <td class="left"><%= r.matric %></td>
          <td class="left"><%= r.full_name %></td>
          <td class="center"><%= r.reg_type %></td>
          <td class="center"><%= r.units %></td>
          <td class="center"><%= r.ca1 %></td>
          <td class="center"><%= r.ca2 %></td>
          <td class="center"><%= r.ca3 %></td>
          <td class="center"><%= r.exam %></td>
          <td class="center"><%= r.total %></td>
          <td class="center"><%= r.grade %></td>
          <td class="center"><%= r.gp %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% if (isLast) { %>
    <div class="bottom-wrap">
      <div>
        <div class="box-title">SUMMARY</div>
        <table class="box">
          <tbody>
            <tr><td>No. OF EXAMINED</td><td class="center"><%= summary.examined %></td></tr>
            <tr><td>No. OF PASS</td><td class="center"><%= summary.pass %></td></tr>
            <tr><td>No. OF FAIL</td><td class="center"><%= summary.fail %></td></tr>
          </tbody>
        </table>
      </div>

      <div>
        <div class="box-title">GRADE COUNTS</div>
        <table class="box">
          <tbody>
            <% const gc = summary.gradeCounts || {}; 
               const keys = Object.keys(gc).sort();
               if (!keys.length) { %>
              <tr><td class="center">No grade counts</td></tr>
            <% } else { keys.forEach(k => { %>
              <tr><td>Grade <%= k %></td><td class="center"><%= gc[k] %></td></tr>
            <% }) } %>
          </tbody>
        </table>
      </div>

      <div>
        <div class="box-title">GRADE INTERPRETATION</div>
        <table class="box">
          <tbody>
            <tr><td class="center">70 - 100</td><td class="center">A</td><td class="center">4</td></tr>
            <tr><td class="center">65 - 69</td><td class="center">B</td><td class="center">3.5</td></tr>
            <tr><td class="center">60 - 64</td><td class="center">C</td><td class="center">3</td></tr>
            <tr><td class="center">55 - 59</td><td class="center">D</td><td class="center">2.5</td></tr>
            <tr><td class="center">50 - 54</td><td class="center">E</td><td class="center">2</td></tr>
            <tr><td class="center">0 - 49</td><td class="center">F</td><td class="center">0</td></tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="sig-row">
      <div class="sig"><div class="line"></div>MRS. A.M. OLUSUYI<br/>H.O.D</div>
      <div class="sig"><div class="line"></div>DR.(MRS) M.E. OGUNRINDE<br/>DEAN</div>
      <div class="sig"><div class="line"></div>MRS. C.A. OGUNSAKIN<br/>REGISTRAR</div>
      <div class="sig"><div class="line"></div>DR(MRS) C.O. ADEBAYO<br/>PROVOST</div>
    </div>
  <% } %>

  <div class="footer">
    <div>Page- <%= pageNo %>/<%= totalPages %></div>
    <div>Printed @ <%= (m.printedAt || "") %></div>
  </div>

</div>
<% }) %>

</body>
</html>
