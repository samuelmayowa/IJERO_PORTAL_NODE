<%
  const s = (typeof stats !== 'undefined' && stats) ? stats : {};

  const sessionName = s.sessionName || 'N/A';
  const totalApplicants = Number(s.totalApplicants || 0);
  const totalStudents = Number(s.totalStudents || 0);
  const totalStaff = Number(s.totalStaff || 0);

  const regs = (typeof recentCourseRegs !== 'undefined' && Array.isArray(recentCourseRegs)) ? recentCourseRegs : [];
  const att = (typeof attendance !== 'undefined' && Array.isArray(attendance)) ? attendance : [];

  const toMin = (t) => {
    try { const [h,m] = String(t||'').split(':').map(Number); return (h*60)+m; } catch { return 0; }
  };

  const recentlyLogin = att.filter(r => toMin(r.time) >= (9*60)).length;
  const onlineCount = att.filter(r => r.status === 'Online').length;
  const onLeaveCount = att.filter(r => r.status === 'On-Leave').length;
%>

<!-- Stat boxes -->
<div class="row">
  <div class="col-lg-3 col-6">
    <div class="small-box bg-info">
      <div class="inner">
        <h3><%= sessionName %></h3>
        <p>Current Academic Session</p>
      </div>
      <div class="icon"><i class="ion ion-bag"></i></div>
      <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
    </div>
  </div>

  <div class="col-lg-3 col-6">
    <div class="small-box bg-success">
      <div class="inner">
        <h3><%= totalApplicants %></h3>
        <p>Total Number of Applicants</p>
      </div>
      <div class="icon"><i class="ion ion-stats-bars"></i></div>
      <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
    </div>
  </div>

  <div class="col-lg-3 col-6">
    <div class="small-box bg-warning">
      <div class="inner">
        <h3><%= totalStudents %></h3>
        <p>Total Number of Students</p>
      </div>
      <div class="icon"><i class="ion ion-person-add"></i></div>
      <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
    </div>
  </div>

  <div class="col-lg-3 col-6">
    <div class="small-box bg-danger">
      <div class="inner">
        <h3><%= totalStaff %></h3>
        <p>Total Number of Staff</p>
      </div>
      <div class="icon"><i class="ion ion-pie-graph"></i></div>
      <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
    </div>
  </div>
</div>

<div class="row">
  <!-- LEFT -->
  <section class="col-lg-6 connectedSortable">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><i class="fas fa-chart-line mr-1"></i> Recent Course Registration</h3>
        <div class="card-tools">
          <a href="/staff/registration/report" class="btn btn-sm btn-success">View/Print List</a>
          <a href="/staff/registration/report" class="btn btn-sm btn-success">Print Clearance List</a>
        </div>
      </div>

      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-striped table-hover mb-0">
            <thead>
              <tr>
                <th>#</th>
                <th>Matric No.</th>
                <th>Course</th>
                <th>Date</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (!regs.length) { %>
                <tr>
                  <td colspan="5" class="text-center text-muted">No recent registrations</td>
                </tr>
              <% } %>

              <% regs.forEach(function (r, idx) { %>
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= r.matric %></td>
                  <td><%= r.course %></td>
                  <td><%= r.date %></td>
                  <td>
                    <a class="btn btn-sm btn-success" href="/staff/registration/report?q=<%= encodeURIComponent(r.matric || '') %>">
                      View Details
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Direct chat (kept as-is / static) -->
    <div class="card direct-chat direct-chat-primary">
      <div class="card-header">
        <h3 class="card-title">Direct Chat student / staff</h3>
        <div class="card-tools">
          <span class="badge badge-primary">3</span>
          <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
          <button type="button" class="btn btn-tool" title="Contacts" data-widget="chat-pane-toggle"><i class="fas fa-comments"></i></button>
          <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
        </div>
      </div>
      <div class="card-body">
        <div class="direct-chat-messages">
          <div class="direct-chat-msg">
            <div class="direct-chat-infos clearfix">
              <span class="direct-chat-name float-left">You</span>
              <span class="direct-chat-timestamp float-right">10:12 AM</span>
            </div>
            <img class="direct-chat-img" src="/public/img/avatar.png" alt="message user image">
            <div class="direct-chat-text">Hi, what's the venue for CSC201 lab?</div>
          </div>

          <div class="direct-chat-msg right">
            <div class="direct-chat-infos clearfix">
              <span class="direct-chat-name float-right">Course Rep</span>
              <span class="direct-chat-timestamp float-left">10:13 AM</span>
            </div>
            <img class="direct-chat-img" src="/public/img/course-rep.png" alt="message user image">
            <div class="direct-chat-text">New Lab 2, 1:00â€“3:00 PM.</div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <form action="#">
          <div class="input-group">
            <input type="text" name="message" placeholder="Type Message ." class="form-control">
            <span class="input-group-append">
              <button type="button" class="btn btn-primary">Send</button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- RIGHT -->
  <section class="col-lg-6 connectedSortable">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><i class="fas fa-th mr-1"></i> Staff Attendance</h3>
        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
          <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
        </div>
      </div>

      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-striped table-hover mb-0">
            <thead>
              <tr>
                <th>#</th>
                <th>ID</th>
                <th>Name</th>
                <th>Status</th>
                <th>Time</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (!att.length) { %>
                <tr><td colspan="6" class="text-center text-muted">No attendance yet</td></tr>
              <% } %>

              <% att.forEach(function (row, idx) { %>
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= row.staffId %></td>
                  <td><%= row.name %></td>
                  <td><%= row.status %></td>
                  <td><%= row.time %></td>
                  <td><a href="/staff/attendance/report" class="btn btn-sm btn-success">View Details</a></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer" style="background:#eaf6f2;">
        <div class="row text-center">
          <div class="col">
            <div style="display:inline-block; padding:14px 18px; border-radius:8px; background:#bfe4d6;">
              <div style="font-size:22px; font-weight:700;"><%= recentlyLogin %></div>
              <div style="font-size:12px;">Recently<br/>Login</div>
            </div>
          </div>
          <div class="col">
            <div style="display:inline-block; padding:14px 18px; border-radius:8px; background:#bfe4d6;">
              <div style="font-size:22px; font-weight:700;"><%= onlineCount %></div>
              <div style="font-size:12px;">Online</div>
            </div>
          </div>
          <div class="col">
            <div style="display:inline-block; padding:14px 18px; border-radius:8px; background:#bfe4d6;">
              <div style="font-size:22px; font-weight:700;"><%= onLeaveCount %></div>
              <div style="font-size:12px;">On-Leave</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
