<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Graduating List</title>

  <style>
    @page { size: A4 portrait; margin: 12mm; }
    * { box-sizing: border-box; }
    body { font-family: Arial, Helvetica, sans-serif; color: #111; margin: 0; }
    .wrap { padding: 10px 12px; }

    .header {
      display: grid;
      grid-template-columns: 70px 1fr 220px;
      gap: 12px;
      align-items: center;
      border-bottom: 2px solid #111;
      padding-bottom: 10px;
      margin-bottom: 10px;
    }
    .logo {
      width: 70px; height: 70px;
      object-fit: contain;
    }
    .titleBlock h1 {
      margin: 0;
      font-size: 18px;
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 0.3px;
    }
    .titleBlock .inst {
      font-size: 14px;
      font-weight: 700;
      text-transform: uppercase;
      margin: 0 0 2px 0;
    }
    .titleBlock .sub {
      margin: 0;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .metaBox {
      font-size: 11px;
      line-height: 1.35;
      border: 1px solid #333;
      padding: 8px 10px;
      border-radius: 6px;
    }
    .metaRow { display: flex; justify-content: space-between; gap: 10px; }
    .metaRow b { font-weight: 700; }

    .notice {
      border: 1px dashed #b00;
      color: #b00;
      padding: 10px 12px;
      border-radius: 6px;
      margin: 10px 0 14px;
      font-size: 12px;
      font-weight: 700;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      table-layout: fixed;
      font-size: 11px;
    }
    thead { display: table-header-group; }
    th, td {
      border: 1px solid #111;
      padding: 5px 6px;
      vertical-align: middle;
      word-wrap: break-word;
    }
    th {
      background: #f0f0f0;
      text-transform: uppercase;
      font-size: 10px;
      letter-spacing: 0.2px;
    }
    td.num { text-align: right; }
    td.center { text-align: center; }
    tr { page-break-inside: avoid; }

    .small { font-size: 10px; color: #333; }
  </style>
</head>

<body>
<%
  const m = meta || {};
  const dataRows = Array.isArray(rows) ? rows : [];
  const msg = (m && m.message) ? String(m.message) : "";

  const safe = (v, fallback = "") => (v === 0 ? "0" : (v ?? fallback));
  const upper = (v) => String(v || "").toUpperCase();

  const level = upper(m.levelLabel || m.level || "");
  const schoolName = String(m.schoolName || "");
  const departmentName = String(m.departmentName || "");
  const programmeName = String(m.programmeName || "");
  const printedAt = String(m.printedAt || "");
%>

<div class="wrap">
  <div class="header">
    <img class="logo" src="/public/img/logo.png" alt="Logo"/>
    <div class="titleBlock">
      <p class="inst"><%= upper(m.institutionName || "INSTITUTION") %></p>
      <h1>Graduating List</h1>
      <p class="sub"><%= level ? ("Level: " + level) : "" %></p>
    </div>

    <div class="metaBox">
      <div class="metaRow"><span><b>Level:</b></span><span><%= level %></span></div>
      <div class="metaRow"><span><b>Status:</b></span><span><%= upper(m.statusMode || "") %></span></div>
      <div class="metaRow"><span><b>Printed:</b></span><span><%= printedAt %></span></div>
    </div>
  </div>

  <% if (schoolName || departmentName || programmeName) { %>
    <div class="small" style="margin: 0 0 8px 0;">
      <% if (schoolName) { %><b>School:</b> <%= schoolName %> &nbsp;&nbsp; | &nbsp;&nbsp;<% } %>
      <% if (departmentName) { %><b>Department:</b> <%= departmentName %> &nbsp;&nbsp; | &nbsp;&nbsp;<% } %>
      <% if (programmeName) { %><b>Programme:</b> <%= programmeName %><% } %>
    </div>
  <% } %>

  <% if (msg) { %>
    <div class="notice"><%= msg %></div>
  <% } %>

  <table>
    <thead>
      <tr>
        <th style="width: 40px;">S/N</th>
        <th style="width: 115px;">Matric No</th>
        <th>Full Name</th>
        <th style="width: 120px;">School</th>
        <th style="width: 130px;">Department</th>
        <th style="width: 140px;">Programme</th>
        <th style="width: 60px;">CGPA</th>
      </tr>
    </thead>

    <tbody>
      <% if (!dataRows.length) { %>
        <tr>
          <td colspan="7" class="center" style="padding: 14px; font-weight: 700;">
            No records to display.
          </td>
        </tr>
      <% } else { %>
        <% dataRows.forEach((r, idx) => { %>
          <tr>
            <td class="center"><%= idx + 1 %></td>
            <td><%= safe(r.matric) %></td>
            <td><%= safe(r.full_name) %></td>
            <td><%= safe(r.school) %></td>
            <td><%= safe(r.department) %></td>
            <td><%= safe(r.programme) %></td>
            <td class="num"><%= safe(r.cgpa, "") %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

<script>
  window.addEventListener('load', () => {
    try { window.print(); } catch (e) {}
  });
</script>
</body>
</html>
