    }
    .menu-toggle{
      display:none; border:0; background:transparent; font-size:1.25rem; line-height:1; padding:.5rem; cursor:pointer;
    }
    .menu-toggle:focus{ outline:2px solid rgba(0,0,0,.25); outline-offset:2px; }
    .nav .menu{ display:flex; align-items:center; gap:1rem; }
    .nav .menu li{ position:relative; }
    .submenu-toggle{ display:none; border:0; background:transparent; padding:.25rem .5rem; font-size:.95rem; cursor:pointer; }
    .submenu-toggle i{ transition:transform .2s ease; }

    @media (max-width: 992px){
      .menu-toggle{ display:inline-flex; align-items:center; justify-content:center; }
      .nav{ flex-wrap:wrap; }
      .nav .menu{
        width:100%; display:none; flex-direction:column; gap:.25rem; margin-top:.5rem;
      }
      .nav.is-open .menu{ display:flex; }
      .nav .menu > li{ width:100%; }
      .nav .menu > li > a{ display:flex; align-items:center; justify-content:space-between; width:100%; padding:.4rem 0; }
      .submenu-toggle{ display:inline-flex; align-items:center; }
      .nav .dd{ display:none; padding:.25rem 0 .5rem .75rem; }
      .nav .has-dd.open > .dd{ display:block; }
      .nav .has-dd.open .submenu-toggle i{ transform:rotate(180deg); }
    }

