<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Master Mark Sheet</title>

  <style>
    @page { size: A4 landscape; margin: 10mm; }
    * { box-sizing: border-box; }
    body { font-family: Arial, Helvetica, sans-serif; color: #111; margin: 0; }
    .wrap { padding: 10px 12px; }

    .header {
      display: grid;
      grid-template-columns: 70px 1fr 220px;
      gap: 12px;
      align-items: center;
      border-bottom: 2px solid #111;
      padding-bottom: 10px;
      margin-bottom: 10px;
    }

    .logo {
      width: 70px; height: 70px;
      object-fit: contain;
    }

    .titleBlock h1 {
      margin: 0;
      font-size: 18px;
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 0.3px;
    }
    .titleBlock .inst {
      font-size: 14px;
      font-weight: 700;
      text-transform: uppercase;
      margin: 0 0 2px 0;
    }
    .titleBlock .sub {
      margin: 0;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .metaBox {
      font-size: 11px;
      line-height: 1.35;
      border: 1px solid #333;
      padding: 8px 10px;
      border-radius: 6px;
    }
    .metaRow { display: flex; justify-content: space-between; gap: 10px; }
    .metaRow b { font-weight: 700; }

    .notice {
      border: 1px dashed #b00;
      color: #b00;
      padding: 10px 12px;
      border-radius: 6px;
      margin: 10px 0 14px;
      font-size: 12px;
      font-weight: 700;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      table-layout: fixed;
      font-size: 10.5px;
    }
    thead { display: table-header-group; }
    th, td {
      border: 1px solid #111;
      padding: 4px 5px;
      vertical-align: middle;
      word-wrap: break-word;
    }
    th {
      background: #f0f0f0;
      text-transform: uppercase;
      font-size: 10px;
      letter-spacing: 0.2px;
    }
    td.num { text-align: right; }
    td.center { text-align: center; }

    .footer {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      margin-top: 10px;
      align-items: start;
    }
    .summary {
      border: 1px solid #333;
      border-radius: 6px;
      padding: 8px 10px;
      font-size: 11px;
    }
    .summary h3 {
      margin: 0 0 6px 0;
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 0.2px;
    }
    .summaryGrid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 6px 10px;
    }
    .sigBox {
      border: 1px solid #333;
      border-radius: 6px;
      padding: 8px 10px;
      font-size: 11px;
      min-height: 86px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .sigLine {
      display: flex;
      justify-content: space-between;
      gap: 10px;
      margin-top: 10px;
    }
    .line {
      border-bottom: 1px solid #111;
      height: 14px;
      flex: 1;
    }
    .small { font-size: 10px; color: #333; }

    /* Prevent ugly print splits */
    tr { page-break-inside: avoid; }
  </style>
</head>

<body>
<%
  // IMPORTANT: do NOT redeclare "rows" in a way that shadows itself (TDZ issue).
  const m = meta || {};
  const dataRows = Array.isArray(rows) ? rows : [];
  const msg = (m && m.message) ? String(m.message) : "";

  const safe = (v, fallback = "") => (v === 0 ? "0" : (v ?? fallback));
  const upper = (v) => String(v || "").toUpperCase();

  const titleSession = upper(m.sessionName || "");
  const titleSemester = upper(m.semesterLabel || m.semester || "");
  const titleLevel = upper(m.levelLabel || m.level || "");
  const courseCode = upper(m.courseCode || "");
  const courseTitle = String(m.courseTitle || "");
  const courseUnits = safe(m.courseUnits, "");
  const schoolName = String(m.schoolName || "");
  const departmentName = String(m.departmentName || "");
  const printedAt = String(m.printedAt || "");

  const summary = m.summary || {};
  const examined = safe(summary.examined, "0");
  const pass = safe(summary.pass, "0");
  const fail = safe(summary.fail, "0");
  const gradeCounts = summary.gradeCounts || {};
%>

<div class="wrap">
  <div class="header">
    <img class="logo" src="/public/img/logo.png" alt="Logo"/>
    <div class="titleBlock">
      <p class="inst"><%= upper(m.institutionName || "INSTITUTION") %></p>
      <h1>Master Mark Sheet</h1>
      <p class="sub"><%= courseCode %> <%= courseTitle ? ("- " + courseTitle) : "" %></p>
    </div>

    <div class="metaBox">
      <div class="metaRow"><span><b>Session:</b></span><span><%= titleSession %></span></div>
      <div class="metaRow"><span><b>Semester:</b></span><span><%= titleSemester %></span></div>
      <div class="metaRow"><span><b>Level:</b></span><span><%= titleLevel %></span></div>
      <div class="metaRow"><span><b>Units:</b></span><span><%= courseUnits %></span></div>
      <div class="metaRow"><span><b>Status:</b></span><span><%= upper(m.statusMode || "") %></span></div>
      <div class="metaRow"><span><b>Printed:</b></span><span><%= printedAt %></span></div>
    </div>
  </div>

  <% if (schoolName || departmentName) { %>
    <div class="small" style="margin: 0 0 8px 0;">
      <b>School:</b> <%= schoolName || "-" %> &nbsp;&nbsp; | &nbsp;&nbsp;
      <b>Department:</b> <%= departmentName || "-" %>
    </div>
  <% } %>

  <% if (msg) { %>
    <div class="notice"><%= msg %></div>
  <% } %>

  <table>
    <thead>
      <tr>
        <th style="width: 38px;">S/N</th>
        <th style="width: 105px;">Matric No</th>
        <th>Full Name</th>
        <th style="width: 72px;">Reg Type</th>
        <th style="width: 46px;">Units</th>
        <th style="width: 46px;">CA1</th>
        <th style="width: 46px;">CA2</th>
        <th style="width: 46px;">CA3</th>
        <th style="width: 52px;">Exam</th>
        <th style="width: 52px;">Total</th>
        <th style="width: 52px;">Grade</th>
        <th style="width: 46px;">GP</th>
      </tr>
    </thead>

    <tbody>
      <% if (!dataRows.length) { %>
        <tr>
          <td colspan="12" class="center" style="padding: 14px; font-weight: 700;">
            No records to display.
          </td>
        </tr>
      <% } else { %>
        <% dataRows.forEach((r, idx) => { %>
          <tr>
            <td class="center"><%= idx + 1 %></td>
            <td><%= safe(r.matric) %></td>
            <td><%= safe(r.full_name) %></td>
            <td class="center"><%= upper(r.reg_type) %></td>
            <td class="center"><%= safe(r.units) %></td>
            <td class="num"><%= safe(r.ca1, "") %></td>
            <td class="num"><%= safe(r.ca2, "") %></td>
            <td class="num"><%= safe(r.ca3, "") %></td>
            <td class="num"><%= safe(r.exam, "") %></td>
            <td class="num"><%= safe(r.total, "") %></td>
            <td class="center"><%= upper(r.grade) %></td>
            <td class="num"><%= safe(r.gp, "") %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>

  <div class="footer">
    <div class="summary">
      <h3>Summary</h3>
      <div class="summaryGrid">
        <div><b>Examined:</b> <%= examined %></div>
        <div><b>Pass:</b> <%= pass %></div>
        <div><b>Fail:</b> <%= fail %></div>
        <div><b>Grades:</b>
          <%
            const entries = Object.entries(gradeCounts || {});
            const txt = entries.length
              ? entries.map(([g,c]) => `${String(g).toUpperCase()}:${c}`).join("  |  ")
              : "-";
          %>
          <%= txt %>
        </div>
      </div>
    </div>

    <div class="sigBox">
      <div>
        <b>Signatures</b>
        <div class="small">Use this section for department/exams verification.</div>
      </div>
      <div class="sigLine">
        <div style="flex: 1;">
          <div class="line"></div>
          <div class="small">HOD / Examiner</div>
        </div>
        <div style="flex: 1;">
          <div class="line"></div>
          <div class="small">Date</div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Optional: auto open print dialog
  window.addEventListener('load', () => {
    try { window.print(); } catch (e) {}
  });
</script>
</body>
</html>
